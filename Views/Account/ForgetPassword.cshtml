@model ForgetPasswordViewModel

<h2>ForgetPassword Password</h2>

<form method="post">
    <div>
        <label for="Email">Email</label>
        <input type="email" id="Email" name="Email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
 <div>
         <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ForgetPassword">Remember Password</a>
    </div>
    <div>
        <button type="submit">Send Email</button>
    </div>
</form>
