@model EditClamsViewModel

@{
    ViewData["Title"] = "Edit User Claims";
}

<h2>Edit User Claims</h2>

<form asp-action="ManageUserClaims" method="post">
    <!-- User ID -->
    <div class="form-group">
        <label for="UserId">User ID</label>
        <input type="text" class="form-control" id="UserId" name="UserId" value="@Model.UserId"  />
    </div>

    <!-- Claims Table -->
    <div class="form-group">
        <label>Claims</label>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Claim Type</th>
                    <th>Selected</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.UserClaims.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.UserClaims[i].ClaimType
                            <input type="hidden" name="UserClaims[@i].ClaimType" value="@Model.UserClaims[i].ClaimType" />
                        </td>
                        <td>
                            <input type="checkbox" name="UserClaims[@i].IsSelected" value="true" @(Model.UserClaims[i].IsSelected ? "checked" : "") />
                            <input type="hidden" name="UserClaims[@i].IsSelected" value="false" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Buttons -->
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
