@using IdentiyFreamwork.Controllers;
@model IEnumerable<UserWithRolesViewModel> 

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() > 1){
            @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.Roles.Any())
                            {
                                @string.Join(", ", user.Roles)
                            }
                            else
                            {
            
                                <span>No Roles Assigned</span>
                            }
                        </td>
                        <td>
                        <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-primary">Edit</a>
                        <a asp-action="Edit" asp-controller="Clams" asp-route-userId="@user.UserId" class="btn btn-success">Clams</a>
                        <form asp-action="Delete" asp-route-id="@user.UserId" method="post" style="display:inline;">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                </td>
                    </tr>
                }
        }
    </tbody>
</table>
